{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PcAnalys Agent",
  "version": "0.1.0",
  "identifier": "com.pcanalys.agent",
  "build": {
    "beforeDevCommand": "pnpm vite",
    "beforeBuildCommand": "pnpm vite:build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png", "icons/icon.ico"]
  },
  "app": {
    "windows": [
      {
        "title": "PcAnalys Agent",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
